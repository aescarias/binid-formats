// BinDef for the ZIP compressed archive
// https://pkware.cachefly.net/webdocs/casestudies/APPNOTE.TXT
{
  meta: {
    bdf: "0.5",
    name: "ZIP compressed archive",
    mime: ["application/zip"],
    exts: [".zip"],
  },
  binary: [
    { type: byte[4], magic: _ =="PK\x03\x04" },
    { id: minVersion,        type: uint16, endian: "little", name: "Minimum version to extract" },
    { id: gpBitFlag,         type: uint16, endian: "little", name: "General-purpose bit flag" },
    { id: compressionMethod, type: uint16, endian: "little", name: "Compression method" },
    { id: lastModFileTime,   type: uint16, endian: "little", name: "Last file modification time" },
    { id: lastModFileDate,   type: uint16, endian: "little", name: "Last file modification date" },
  ]
}
