{
  meta: {
    bdf: "0.3",
    name: "Paint.NET image file",
    mime: ["image/x-paintnet"],
    exts: [".pdn"],
  },
  binary: [
    { type: magic, match: "PDN3" },
    // rudimentary uint24 parsing
    { type: array[3], id: _hsb, item: { type: uint8 } },
    { type: var, id: headerSize, name: "Header size", value: _hsb[2]<<16 | _hsb[1]<<8 | _hsb[0] },
    
    { type: byte[headerSize], id: header, name: "XML header" }
    // TODO: The next value is a little-endian 24-bit header size followed by
    // XML header data. After the header follows NRBF-serialized content.
    // Hints about the format structure can be found in the pypdn source code.
    // https://github.com/addisonElliott/pypdn/blob/master/pypdn/reader.py 
  ]
}
